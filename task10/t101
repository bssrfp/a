<%
    int s = 0;
    String num1 = request.getParameter("num1");
    String num2 = request.getParameter("num2");

    if(num1 != null && num2 != null && !num1.equals("") && !num2.equals("")){
        int n1 = Integer.parseInt(num1);
        int n2 = Integer.parseInt(num2);
        s = n1 + n2;
%>
        <h3>Sum = <%= s %></h3>
<%
    }
